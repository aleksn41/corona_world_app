<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.map.MapFragment">

    <WebView
        android:id="@+id/map_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:rcBackgroundColor="#0A000000"
        app:rcBackgroundPadding="2dp"
        app:rcMax="100"
        app:rcProgress="0"
        app:rcProgressColor="#4CAF50"
        app:rcRadius="80dp"
        app:rcReverse="false"
        app:rcSecondaryProgress="100"
        app:rcSecondaryProgressColor="#40009688"
        app:rcTextInsideGravity="end"
        app:rcTextOutsideGravity="end"
        app:rcTextPositionPriority="inside"
        app:rcTextProgress="sample Text"
        app:rcTextProgressColor="#111111" />
</RelativeLayout>