<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/statistic_call_list_item_height"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:orientation="vertical">

    <TextView
        android:id="@+id/StatisticCallItemTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="@string/default_elem_text" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/starButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@id/StatisticCallItemTextView"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/margin_big"
        app:sparkbutton_activeImage="@drawable/ic_star_on"
        app:sparkbutton_animationSpeed=".85"
        app:sparkbutton_iconSize="30dp"
        app:sparkbutton_inActiveImage="@drawable/ic_star_off" />
</RelativeLayout>